{ 
    "_id" : "enaStudies", 
    "displayNameSingular" : "ENA/EVA Study", 
    "displayNamePlural" : "ENA/EVA Studies", 
    "description" : "A description of a scientific study to be archived by the ENA or EVA. It forms part of a project.", 
    "validationSchema" : {
        "#dollar#schema" : "http://json-schema.org/draft-07/schema#", 
        "#dollar#async" : true, 
        "title" : "Submissions Study Schema", 
        "description" : "A base validation study schema", 
        "version" : "1.0.0", 
        "author" : "subs", 
        "type" : "object", 
        "properties" : {
            "alias" : {
                "description" : "An unique identifier in a submission.", 
                "type" : "string", 
                "minLength" : 1.0
            }, 
            "title" : {
                "description" : "Title of the study.", 
                "type" : "string"
            }, 
            "description" : {
                "description" : "More extensive free-form description.", 
                "type" : "string"
            }, 
            "projectRef" : {
                "description" : "Reference to project.", 
                "#dollar#ref" : "#/definitions/submittableRef"
            }, 
            "protocolRefs" : {
                "description" : "Reference(s) to protocol(s).", 
                "type" : "array", 
                "items" : {
                    "#dollar#ref" : "#/definitions/submittableRef"
                }
            }, 
            "attributes" : {
                "description" : "Attributes for describing a study.", 
                "type" : "object", 
                "properties" : {
                    "study_abstract" : {
                        "minItems" : 1.0, 
                        "maxItems" : 1.0, 
                        "type" : "array", 
                        "description" : "Briefly describes the goals, purpose, and scope of the Study. This need not be listed if it can be inherited from a referenced publication.", 
                        "items" : {
                            "type" : "object", 
                            "properties" : {
                                "value" : {
                                    "type" : "string"
                                }
                            }
                        }
                    }, 
                    "study_type" : {
                        "minItems" : 1.0, 
                        "maxItems" : 1.0, 
                        "type" : "array", 
                        "description" : "Define the type of the study", 
                        "items" : {
                            "type" : "object", 
                            "properties" : {
                                "value" : {
                                    "enum" : [
                                        "Whole Genome Sequencing", 
                                        "Metagenomics", 
                                        "Transcriptome Analysis", 
                                        "Resequencing", 
                                        "Epigenetics", 
                                        "Synthetic Genomics", 
                                        "Forensic or Paleo-genomics", 
                                        "Gene Regulation Study", 
                                        "Cancer Genomics", 
                                        "Population Genomics", 
                                        "RNASeq", 
                                        "Exome Sequencing", 
                                        "Pooled Clone Sequencing", 
                                        "Other"
                                    ]
                                }
                            }
                        }
                    }
                }, 
                "patternProperties" : {
                    "^#dot#*$" : {
                        "type" : "array", 
                        "minItems" : 1.0, 
                        "items" : {
                            "type" : "object", 
                            "properties" : {
                                "value" : {
                                    "type" : "string", 
                                    "minLength" : 1.0
                                }, 
                                "units" : {
                                    "type" : "string", 
                                    "minLength" : 1.0
                                }, 
                                "terms" : {
                                    "type" : "array", 
                                    "items" : {
                                        "type" : "object", 
                                        "properties" : {
                                            "url" : {
                                                "type" : "string", 
                                                "format" : "uri", 
                                                "isValidTerm" : true
                                            }
                                        }, 
                                        "required" : [
                                            "url"
                                        ]
                                    }
                                }
                            }, 
                            "required" : [
                                "value"
                            ]
                        }
                    }
                }
            }
        }, 
        "definitions" : {
            "submittableRef" : {
                "type" : "object", 
                "properties" : {
                    "alias" : {
                        "type" : "string", 
                        "minLength" : 1.0
                    }, 
                    "accession" : {
                        "type" : "string", 
                        "minLength" : 1.0
                    }, 
                    "team" : {
                        "type" : "string", 
                        "minLength" : 1.0
                    }
                }, 
                "anyOf" : [
                    {
                        "required" : [
                            "alias", 
                            "team"
                        ]
                    }, 
                    {
                        "required" : [
                            "accession"
                        ]
                    }
                ]
            }
        }, 
        "required" : [
            "alias", 
            "title"
        ]
    }, 
    "refRequirements" : [
        {
            "refClassName" : "uk.ac.ebi.subs.data.component.ProjectRef", 
            "dataTypeIdForReferencedDocument" : "projects", 
            "additionalRequiredValidationAuthors" : [

            ]
        }
    ], 
    "requiredValidationAuthors" : [
        "Ena", 
        "Core", 
        "JsonSchema"
    ], 
    "optionalValidationAuthors" : [

    ], 
    "submittableClassName" : "uk.ac.ebi.subs.repository.model.Study", 
    "archive" : "Ena"
}