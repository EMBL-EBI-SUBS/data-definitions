{ 
    "_id" : "samples", 
    "displayNameSingular" : "Sample", 
    "displayNamePlural" : "Samples", 
    "description" : "Description and metadata of a biological sample. This will be stored in BioSamples.", 
    "validationSchema" : {
        "#dollar#schema" : "http://json-schema.org/draft-07/schema#", 
        "#dollar#async" : true, 
        "title" : "Submissions Sample Schema", 
        "description" : "A base validation sample schema", 
        "version" : "1.0.0", 
        "author" : "subs", 
        "type" : "object", 
        "properties" : {
            "alias" : {
                "description" : "An unique identifier in a submission.", 
                "type" : "string", 
                "minLength" : 1.0
            }, 
            "title" : {
                "description" : "Title of the sample.", 
                "type" : "string", 
                "minLength" : 1.0
            }, 
            "description" : {
                "description" : "More extensive free-form description.", 
                "type" : "string", 
                "minLength" : 1.0
            }, 
            "taxonId" : {
                "type" : "integer", 
                "minimum" : 1.0
            }, 
            "taxon" : {
                "type" : "string", 
                "minLength" : 1.0
            }, 
            "releaseDate" : {
                "type" : "string", 
                "format" : "date"
            }, 
            "attributes" : {
                "description" : "Attributes for describing a sample.", 
                "type" : "object", 
                "properties" : {

                }, 
                "patternProperties" : {
                    "^#dot#*$" : {
                        "type" : "array", 
                        "minItems" : 1.0, 
                        "items" : {
                            "properties" : {
                                "value" : {
                                    "type" : "string", 
                                    "minLength" : 1.0
                                }, 
                                "units" : {
                                    "type" : "string", 
                                    "minLength" : 1.0
                                }, 
                                "terms" : {
                                    "type" : "array", 
                                    "items" : {
                                        "type" : "object", 
                                        "properties" : {
                                            "url" : {
                                                "type" : "string", 
                                                "format" : "uri", 
                                                "isValidTerm" : true
                                            }
                                        }, 
                                        "required" : [
                                            "url"
                                        ]
                                    }
                                }
                            }, 
                            "required" : [
                                "value"
                            ]
                        }
                    }
                }
            }, 
            "sampleRelationships" : {
                "type" : "array", 
                "items" : {
                    "type" : "object", 
                    "properties" : {
                        "alias" : {
                            "type" : "string", 
                            "minLength" : 1.0
                        }, 
                        "accession" : {
                            "type" : "string", 
                            "minLength" : 1.0
                        }, 
                        "team" : {
                            "type" : "string", 
                            "minLength" : 1.0
                        }, 
                        "relationshipNature" : {
                            "type" : "string", 
                            "enum" : [
                                "derived from", 
                                "child of", 
                                "same as", 
                                "recurated from"
                            ]
                        }
                    }, 
                    "anyOf" : [
                        {
                            "required" : [
                                "alias", 
                                "relationshipNature"
                            ]
                        }, 
                        {
                            "required" : [
                                "accession", 
                                "relationshipNature"
                            ]
                        }
                    ]
                }
            }
        }, 
        "required" : [
            "alias", 
            "taxonId", 
            "releaseDate"
        ]
    }, 
    "refRequirements" : [
        {
            "refClassName" : "uk.ac.ebi.subs.data.component.SampleRef", 
            "dataTypeIdForReferencedDocument" : "samples", 
            "additionalRequiredValidationAuthors" : [

            ]
        }
    ], 
    "requiredValidationAuthors" : [
        "Biosamples", 
        "Core", 
        "JsonSchema"
    ], 
    "optionalValidationAuthors" : [
        "Ena", 
        "Taxonomy"
    ], 
    "submittableClassName" : "uk.ac.ebi.subs.repository.model.Sample", 
    "archive" : "BioSamples"
}